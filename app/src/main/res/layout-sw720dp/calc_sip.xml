<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        >
        <include
            layout="@layout/customlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIP Calculator"
            android:fontFamily="Open Sans"
            android:textColor="#50c2b4"
            android:textSize="35dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|center"

            android:id="@+id/tv_dashboard"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="60dp"
                android:layout_height="8dp"
                android:background="@drawable/btn_style"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="10dp"

                />


        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="What is the amount you wish to invest monthly(RS)?"
            android:textColor="#333"
            android:textSize="24sp"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_loan"
            android:background="@drawable/feedback_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="For how many years you wish to invest?"
            android:textColor="#333"
            android:textSize="24sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_term"
            android:background="@drawable/feedback_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="What rate of return(%) are you expecting"
            android:textColor="#333"
            android:textSize="24sp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_interest"
            android:background="@drawable/feedback_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:textSize="22sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="Total Amount Invested :"
            android:textColor="#333"
            android:textSize="24sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_total"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:background="#b6e2dc"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="Expected amount on maturity :"
            android:textColor="#333"
            android:textSize="24sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_maturity"
            android:background="#b6e2dc"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"/>







            <Button
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:id="@+id/calc_calculate"
                android:layout_gravity="center"
                android:text="Calculate"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                android:padding="15dp"
                android:background="@drawable/btn_taketest"
                android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_nextsip"
            android:text="Next"
            android:textColor="#27ae60"
            android:textAllCaps="true"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:padding="15dp"
            android:gravity="center_horizontal|center"
            android:layout_marginTop="15dp" />

</LinearLayout>

    </LinearLayout>

</ScrollView>
