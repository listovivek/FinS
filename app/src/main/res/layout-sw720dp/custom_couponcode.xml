<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/custom_fa_r1"
        android:layout_width="match_parent"
        android:background="#4a285b"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <!--<TextView
        android:id="@+id/coupon_title"
        android:layout_below="@+id/custom_fa_r1"
        android:text="title"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <EditText
        android:id="@+id/edit1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:hint="Coupon code"
        android:gravity="center"
        android:background="@drawable/feedback_border"
        android:maxLength="6"
        android:textSize="18sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/custom_fa_r1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/coupon_title"
        android:layout_below="@+id/edit1"
        android:text="(or)"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buy"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:text="Buy Now"
        android:textColor="#4a285b"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/coupon_title"
        android:padding="0dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/send_button"
        android:textColor="@color/white"
        android:background="@drawable/courses_list_btn"
        android:layout_below="@+id/buy"
        android:layout_alignRight="@+id/buy"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@+id/buy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="148dp"
        android:background="@drawable/discard_button"
        android:textColor="@color/white"
        android:layout_marginStart="33dp"
        android:id="@+id/discard_button"
        android:layout_alignTop="@+id/send_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>