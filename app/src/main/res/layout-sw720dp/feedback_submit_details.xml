<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Feedback From"
        android:fontFamily="Open Sans"
        android:textColor="#50c2b4"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />


    <RelativeLayout
        android:id="@+id/feed_r1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:text="Name :"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/txtname"
            android:text="username"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="0dp"
            android:layout_toRightOf="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/feed_r2"
        android:layout_below="@+id/feed_r1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/emial"
            android:text="Email :"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/txtemail"
            android:text="username"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:paddingBottom="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/emial"
            android:layout_toEndOf="@+id/emial"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/feed_r3"
        android:layout_below="@+id/feed_r2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/num"
            android:text="Number :"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/number"
            android:text="username"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/num"
            android:layout_toEndOf="@+id/num"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/feed_r4"
        android:layout_below="@+id/feed_r3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ques1"
            android:textSize="16sp"
            android:text="ques1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans1"
            android:textSize="18sp"
            android:text="ans1"
            android:textColor="#50c2b4"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_ques1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feed_r5"
        android:layout_below="@+id/feed_r4"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ques2"
            android:textSize="16sp"
            android:text="ques1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans2"
            android:textSize="18sp"
            android:text="ans1"
            android:textColor="#50c2b4"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_ques2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feed_r6"
        android:layout_below="@+id/feed_r5"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ques3"
            android:textSize="16sp"
            android:text="ques1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans3"
            android:textSize="18sp"
            android:text="ans1"
            android:textColor="#50c2b4"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_ques3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feed_r7"
        android:layout_below="@+id/feed_r6"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_ques4"
            android:textSize="16sp"
            android:text="ques1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_ans4"
            android:textSize="18sp"
            android:text="ans1"
            android:textColor="#50c2b4"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/txt_ques4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <Button
        android:id="@+id/sheet_button"
        android:layout_below="@+id/feed_r7"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Ok"
        android:background="@drawable/btn_download_play"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="wrap_content" />



</RelativeLayout>