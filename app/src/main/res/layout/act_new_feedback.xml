    </RelativeLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/relative11"
        android:fadeScrollbars="false"
        android:scrollIndicators="right"
        >


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/pre_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="prev"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:layout_marginRight="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>.



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10dp"

            />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/questionNumber"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="question num"
            android:textSize="15dp"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="question"
            android:id="@+id/qDescription"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13dp"
            android:textColor="#000000"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/options">
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/opt0"
                android:buttonTint="#27ae60"
                android:textSize="12dp"/>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/opt1"
                android:buttonTint="#27ae60"
                android:textSize="12dp"/>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/opt2"
                android:buttonTint="#27ae60"
                android:textSize="12dp"/>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/opt3"
                android:buttonTint="#27ae60"
                android:textSize="12dp"/>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="question"
                android:id="@+id/opt4"
                android:buttonTint="#27ae60"
                android:textSize="12dp"/>
        </RadioGroup>


        <RelativeLayout
            android:id="@+id/r7"
            android:layout_below="@+id/r3"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/feed_txtcomment"
                android:text="Comments"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:visibility="gone"
                android:textColor="#4a285b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:hint="Please give me your comments"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit_comments"
                android:background="@drawable/edittext_border"
                android:padding="5dp"
                />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="previous"
                android:id="@+id/previousBtn"
                android:layout_gravity="center_horizontal"
                android:onClick="previous"
                android:padding="5dp"
                android:layout_marginLeft="85dp"
                android:textSize="16sp"
                android:background="@drawable/btn_taketest"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_taketest"
                android:textColor="#ffffff"
                android:id="@+id/nextBtn"
                android:onClick="next" />
        </LinearLayout>

