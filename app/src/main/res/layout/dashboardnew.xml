<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:id="@+id/scrollviewdash">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include
        layout="@layout/customlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:fontFamily="Open Sans"
        android:textColor="#50c2b4"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/tv_dashboard"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses - Tamil"
        android:fontFamily="Open Sans"
        android:textColor="#50c2b4"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center_horizontal"


        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >
        <View
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10dp"

            />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/iv_dashboardnew_video"
        android:background="#000000"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
     <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:id="@+id/imageView1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/colorAccent"
            />
    <ProgressBar
        android:id="@+id/progress"
        android:indeterminateBehavior="repeat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        >
    </ProgressBar>
</FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <Button
                android:id="@+id/full_screen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_max_fullscreen"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_play_btn"
                android:gravity="left|center"
                />

            <Button
                android:id="@+id/btn_playvideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_alignParentRight="true"
                android:background="@drawable/dashboard_green_btn"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_play_btn"
                android:gravity="left|center"
                />

            <Button
                android:id="@+id/btn_downloadnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:background="@drawable/btn_download_dash"
                android:textAllCaps="false"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:ems="6"
                android:drawableLeft="@drawable/ic_download"
                android:gravity="left|center"

                />

            <ProgressBar
                android:id="@+id/full_progress"
                android:indeterminateBehavior="repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
            </ProgressBar>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D3D3D3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finjan"
            android:textColor="#4e2c5a"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/text_finjan_test"
           />
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can create your own website to connect with the people around the world."
            android:gravity="center_horizontal"
            android:layout_margin="5dp"/>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:clipChildren="false"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test_success"
                android:background="@drawable/ic_save_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/take_test"
                android:layout_alignEnd="@+id/take_test" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_green_btn"
            android:id="@+id/take_test"
            android:text="Check your knowledge"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:clipChildren="false"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calc_success"
            android:background="@drawable/ic_save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/dashboard_calc_btn"
            android:layout_alignEnd="@+id/dashboard_calc_btn" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_red_btn"
            android:id="@+id/dashboard_calc_btn"
            android:text="CALCULATOR"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:clipChildren="false"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/faq_success"
            android:background="@drawable/ic_save_profile"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/dashboard_faq_btn"
            android:layout_alignEnd="@+id/dashboard_faq_btn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_red_btn"
            android:id="@+id/dashboard_faq_btn"
            android:text="FAQ"
            android:enabled="false"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />



        </RelativeLayout>





    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:clipChildren="false"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/go_to_next"
            android:text="Next"
            android:visibility="visible"
            android:textColor="#27ae60"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/previous"
            android:text="previous"
            android:visibility="visible"
            android:layout_gravity="right"
            android:textColor="#27ae60"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textSize="22dp"
            />

    </RelativeLayout>


</LinearLayout>

</ScrollView>