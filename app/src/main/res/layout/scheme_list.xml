<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        layout="@layout/customlayout"
        android:id="@+id/cus_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schemes"
        android:fontFamily="Open Sans"
        android:textColor="#50c2b4"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/cus_layout"
        android:layout_gravity="center_horizontal|center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/tv_dashboard"/>

    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dashboard"
        android:orientation="vertical"
        >
        <View
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:background="@drawable/btn_style"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>


    <ScrollView
        android:id="@+id/sss"
        android:layout_below="@+id/lll"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/liar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/scheme_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_red_btn"
                android:id="@+id/listofmod_faq_btn"
                android:text="FAQ"
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="18dp"
                />
        </LinearLayout>



    </ScrollView>




    <!-- <ListView
         android:id="@+id/list"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:textColor="#4e2c5a"
         android:drawableLeft="@drawable/ic_module_control"
         android:background="#C5E5E0"
         android:layout_margin="5dp"
         android:dividerHeight="2dp"
         android:divider="#ffffff"
                >
     </ListView>-->

</RelativeLayout>
