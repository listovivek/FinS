<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp"
        >

        <include
            layout="@layout/customlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sukanya Samriddhi Calculator"
            android:fontFamily="Open Sans"
            android:textColor="#50c2b4"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_dashboard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="35dp"
                android:layout_height="5dp"
                android:background="@drawable/btn_style"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginBottom="10dp"

                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="Sukanya Samriddhi Investment Amount(P/A)"
            android:textColor="#333"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_sspmt"
            android:background="@drawable/feedback_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="No of Years(year)"
            android:textColor="#333"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_ssyears"
            android:background="@drawable/feedback_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="Rate(%)"
            android:textColor="#333"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_ssrate"

            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:enabled="false"
            android:text="8.4"
            android:background="@drawable/calc_border"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:text="Value at the end of 15 Years "
        android:textColor="#333"

        android:id="@+id/textView3" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_ss14years"
            android:background="@drawable/calc_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:text="Value at the end of 21 Years  "
            android:textColor="#333"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calc_ss21years"
            android:background="@drawable/calc_border"
            android:padding="12dp"
            android:gravity="left|center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />


        <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/calc_calculate"
                android:text="Calculate"
            android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:layout_marginBottom="0dp"
                android:textSize="18dp"
                android:background="@drawable/btn_taketest"
                android:layout_marginTop="30dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calc_nextss"
        android:text="Next"
        android:textColor="#27ae60"
        android:textAllCaps="true"
        android:layout_marginBottom="30dp"
        android:textSize="18dp"
        android:gravity="center_horizontal|center"
        android:layout_marginTop="15dp" />

</LinearLayout>

    </LinearLayout>

</ScrollView>
