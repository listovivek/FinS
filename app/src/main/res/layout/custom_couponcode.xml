<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#4a285b"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/custom_fa_r1"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:src="@drawable/logo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/custom_fa_r1"
        android:background="#4a285b"
        android:layout_gravity="center_horizontal|center"
        android:layout_weight="10"
        />

    <TextView
        android:id="@+id/price"
        android:layout_below="@+id/custom_fa_r1"
        android:text="price"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/coupon_title1"
        android:layout_below="@+id/price"
        android:text="If you have a coupon code, enter here"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:hint="Coupon code"
        android:gravity="center"
        android:background="@drawable/feedback_border"
        android:maxLength="6"
        android:textSize="18sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/coupon_title1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/coupon_title"
        android:layout_below="@+id/edit1"
        android:text="(or)"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/mcq_background_bottom"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/buy"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:text="Buy Now"
        android:textColor="#50c2b4"
        android:layout_marginRight="70dp"
        android:layout_below="@+id/coupon_title"
        android:padding="0dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/buy"
        android:layout_height="wrap_content"

        android:id="@+id/relativeLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:background="@drawable/discard_button"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:id="@+id/discard_button"
           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ok"
            android:id="@+id/send_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/courses_list_btn"
            android:layout_alignTop="@+id/discard_button"
            />

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="10dp" />




</RelativeLayout>